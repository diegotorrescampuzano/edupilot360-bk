    "mongoose": "^8.16.1"
  },
  "devDependencies": {
    "dotenv": "^17.0.1",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
